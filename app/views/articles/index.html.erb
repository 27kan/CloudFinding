<main class="main">
<%# アプリ概要 %>
  <div class="title">
    <div class="title-contents">
    <h1><a href="#" class="about_title">クラウドファインディングとは</a></h1>
    </div>
  </div>

<%# 投稿一覧 %>
  <div class="inner">
    <h1 class="index_title">投稿一覧</h1>
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは
        <%= link_to "#{current_user.nickname}", user_path(current_user.id), class: :greeting__link%>
        さん
      </div> 
    <% end %>
    <div class="card__field">
      <div class="card__wrapper" >
        <%= render partial: "article", collection: @articles %>
      </div>
    </div>
  </div>
</main>